<?xml version="1.0" encoding="utf-8" ?>
<sf:PageBase x:Class="Starward.Features.GameRecord.ZZZ.ShiyuDefensePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sc="using:Starward.Controls"
             xmlns:cgzc="using:Starward.Core.GameRecord.ZZZ.Common"
             xmlns:fic="using:Starward.Core.GameRecord.ZZZ.ShiyuDefense"
             xmlns:local="using:Starward.Features.GameRecord.ZZZ"
             xmlns:sf="using:Starward.Frameworks"
             xmlns:lang="using:Starward.Language"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">

    <Page.Resources>
        <BitmapImage x:Key="Team01Icon" UriSource="ms-appx:///Assets/Image/ZZZ_Team01.png" />
        <BitmapImage x:Key="Team02Icon" UriSource="ms-appx:///Assets/Image/ZZZ_Team02.png" />
        <local:ZZZRatingImageConverter x:Key="ZZZRatingImageConverter" />
        <local:ZZZRarityImageConverter x:Key="ZZZRarityImageConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Name="Image_Emoji"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16"
                    Visibility="Collapsed">
            <Image Width="160"
                   Height="160"
                   Source="{StaticResource EmojiBangboo}" />
            <TextBlock HorizontalAlignment="Center"
                       FontSize="16"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="{x:Bind lang:Lang.HoyolabToolboxPage_NoData}" />
        </StackPanel>

        <StackPanel Margin="0,24,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Spacing="12">
            <Button Height="36"
                    BorderThickness="0"
                    Command="{x:Bind RefreshDataCommand}"
                    CornerRadius="0,18,18,0"
                    Style="{ThemeResource AccentButtonStyle}">
                <StackPanel Margin="4,0,4,0"
                            Orientation="Horizontal"
                            Spacing="8">
                    <FontIcon FontSize="16" Glyph="&#xE72C;" />
                    <TextBlock Text="{x:Bind lang:Lang.Common_Refresh}" />
                </StackPanel>
            </Button>
            <Button Height="36"
                    BorderThickness="0"
                    CornerRadius="0,18,18,0"
                    Shadow="{ThemeResource ThemeShadow}"
                    Style="{ThemeResource AccentButtonStyle}"
                    Translation="0,0,16"
                    Visibility="Collapsed">
                <StackPanel Margin="4,0,4,0"
                            Orientation="Horizontal"
                            Spacing="8">
                    <FontIcon FontSize="16" Glyph="&#xE9D9;" />
                    <TextBlock Text="{x:Bind lang:Lang.Common_Summary}" />
                </StackPanel>
            </Button>
        </StackPanel>

        <ListView Name="ListView_ForgottenHall"
                  Grid.Row="1"
                  Padding="12,0,12,0"
                  ItemsSource="{x:Bind ShiyuDefenseList}"
                  SelectionChanged="ListView_ForgottenHall_SelectionChanged"
                  SelectionMode="Single"
                  Visibility="{x:Bind ShiyuDefenseList, Converter={StaticResource ObjectToVisibilityConverter}}">
            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0,4,0,4" />
                    <Setter Property="Padding" Value="4,0,4,0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="fic:ShiyuDefenseInfo">
                    <Grid Padding="12,8,12,8"
                          Background="{ThemeResource CustomOverlayAcrylicBrush}"
                          CornerRadius="4"
                          RowSpacing="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Text="{x:Bind BeginTime.ToString('yyyy-MM-dd', x:Null)}" />
                        <Image Grid.Row="1"
                               Width="20"
                               Height="20"
                               HorizontalAlignment="Left"
                               Source="{x:Bind Rating, Converter={StaticResource ZZZRatingImageConverter}}" />
                        <TextBlock Grid.Row="1"
                                   Margin="24,0,0,2"
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Text="{x:Bind RatingCount}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ScrollViewer Grid.RowSpan="2"
                      Grid.Column="1"
                      Visibility="{x:Bind CurrentShiyuDefense, Converter={StaticResource ObjectToVisibilityConverter}}">
            <StackPanel Margin="24" Spacing="8">

                <Grid>
                    <!--  统计周期  -->
                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="{x:Bind lang:Lang.ForgottenHallPage_Period}" />
                        <Run Text="" />
                        <Run Text="{x:Bind CurrentShiyuDefense.BeginTime.ToString('yyyy/MM/dd', x:Null)}" />
                        <Run Text=" - " />
                        <Run Text="{x:Bind CurrentShiyuDefense.EndTime.ToString('yyyy/MM/dd', x:Null)}" />
                    </TextBlock>
                </Grid>

                <!--  出战统计  -->
                <Grid Margin="0,-4,0,0"
                      Padding="8"
                      Background="{ThemeResource CustomOverlayAcrylicBrush}"
                      CornerRadius="8"
                      Shadow="{ThemeResource ThemeShadow}"
                      Translation="0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <!--  最快通关时间  -->
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis">
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.ShiyuDefensePage_FastestStateTime}" />
                        <Run Text="" />
                        <Run Text="{x:Bind local:ShiyuDefensePage.PerformancesTime(CurrentShiyuDefense.FastLayerTime)}" />
                    </TextBlock>
                    <!--  最高通关防线  -->
                    <TextBlock Name="TextBlock_Deepest"
                               HorizontalAlignment="Center"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               IsTextTrimmedChanged="TextBlock_Deepest_IsTextTrimmedChanged"
                               TextTrimming="CharacterEllipsis">
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.ShiyuDefensePage_HighestStageCleared}" />
                        <Run Text="" />
                        <Run Text="{x:Bind CurrentShiyuDefense.MaxLayer}" />
                    </TextBlock>
                    <!--  4-7层通关时长  -->
                    <TextBlock Name="TextBlock_Battles"
                               Grid.Column="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind lang:Lang.ShiyuDefensePage_47LayerClearTime}" />
                        <Run Text="" />
                        <Run Text="{x:Bind local:ShiyuDefensePage.PerformancesTime(CurrentShiyuDefense.BattleTime47)}" />
                    </TextBlock>
                    <!--  评分统计  -->
                    <MenuFlyoutSeparator Grid.Row="2"
                                         Grid.ColumnSpan="3"
                                         Margin="4" />
                    <ItemsControl Grid.Row="3" Grid.ColumnSpan="3" ItemsSource="{x:Bind CurrentShiyuDefense.RatingList}" 
                               HorizontalAlignment="Center">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="fic:ShiyuDefenseTotalRatings">
                                <StackPanel
                                    Orientation="Horizontal"
                                    Spacing="12">
                                    <Image  Width="40"
                                            Height="40"
                                            VerticalAlignment="Center"
                                            Source="{x:Bind Rating, Converter={StaticResource ZZZRatingImageConverter}, ConverterParameter=1}" />
                                    <TextBlock VerticalAlignment="Center" FontSize="24" FontWeight="Bold">
                                        <Run Text="x" />
                                        <Run Text="{x:Bind Times}" />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!--  卡片  -->
                <ItemsRepeater Margin="0,12,0,0"
                               HorizontalAlignment="Center"
                               ItemsSource="{x:Bind CurrentShiyuDefense.AllFloorDetail}">
                    <ItemsRepeater.Layout>
                        <UniformGridLayout MinColumnSpacing="12"
                                           MinRowSpacing="12"
                                           Orientation="Horizontal" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="fic:ShiyuDefenseFloorDetail">
                            <Grid Width="388"
                                  Height="360"
                                  Padding="20,0,20,0"
                                  Background="{ThemeResource CustomOverlayAcrylicBrush}"
                                  CornerRadius="8,28,8,8"
                                  Shadow="{ThemeResource ThemeShadow}"
                                  Translation="0,0,16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="56" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <!--  背景图  -->
                                <!--<Grid.Background>
                                    <ImageBrush ImageSource="ms-appx:///Assets/Image/oblivious_chaos_memory_bg@2x.69565376.png"
                                Stretch="UniformToFill" />
                                </Grid.Background>-->
                                <!--  不透明遮罩  -->
                                <!--<Border
                                Grid.RowSpan="5"
                                        Grid.ColumnSpan="3"
                                        Margin="-24,0,-24,0"
                                        Background="#40000000" />-->
                                <Border Grid.ColumnSpan="4"
                                        Margin="-24,0,-24,0"
                                        Background="{ThemeResource ControlOnImageFillColorDefaultBrush}" />
                                <!--  名称，总通关耗时  -->
                                <StackPanel VerticalAlignment="Center" Spacing="2">
                                    <TextBlock FontWeight="Bold"
                                               Text="{x:Bind ZoneName}"
                                               TextTrimming="CharacterEllipsis">
                                        <ToolTipService.ToolTip>
                                            <StackPanel>
                                                <TextBlock HorizontalAlignment="Center" 
                                                           FontSize="16" 
                                                           Text="{x:Bind Buffs[0].Title}" />
                                                <sc:ColorfulTextBlock Margin="0,2,0,0"
                                                                        FontSize="12"
                                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                        Text="{x:Bind Buffs[0].Text}"
                                                                        TextWrapping="Wrap" />
                                            </StackPanel>
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                    <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="{x:Bind lang:Lang.ShiyuDefensePage_ClearTime}" />
                                        <Run Text="{x:Bind local:ShiyuDefensePage.PerformancesTime(BattleTimeSum)}" />
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="3"
                                            VerticalAlignment="Center"
                                            Spacing="2">
                                    <!--  评级  -->
                                    <Image  HorizontalAlignment="Right"
                                            Width="24"
                                            Height="24"
                                            VerticalAlignment="Center"
                                            Source="{x:Bind Rating, Converter={StaticResource ZZZRatingImageConverter}}" />
                                    <!--  通关时间  -->
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right" FontSize="12" Text="{x:Bind FloorChallengeTime.ToString('yyyy-MM-dd HH:mm:ss', x:Null)}" />
                                </StackPanel>
                                <!--  节点1  -->
                                <Image  Grid.Row="1"
                                        Margin="0,8,0,0"
                                        Height="18"
                                        HorizontalAlignment="Left"
                                        Source="{StaticResource Team01Icon}" />
                                <TextBlock Grid.Row="1" Grid.Column="3"
                                            Margin="0,8,0,0"
                                            HorizontalAlignment="Right" FontSize="16" Text="{x:Bind local:ShiyuDefensePage.PerformancesTime(Node1.BattleTime)}" />
                                <!--  代理人  -->
                                <StackPanel Grid.Row="2"
                                            Grid.ColumnSpan="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal"
                                            Spacing="14">
                                    <ItemsRepeater
                                         ItemsSource="{x:Bind Node1.Avatars}">
                                        <ItemsRepeater.Layout>
                                            <StackLayout Orientation="Horizontal" Spacing="14" />
                                        </ItemsRepeater.Layout>
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate x:DataType="cgzc:ZZZAvatar">
                                                <Grid Width="76" Height="94">
                                                    <Border Height="94"
                                                            Width="76"
                                                            VerticalAlignment="Top"
                                                            Background="Black"
                                                            CornerRadius="6,6,6,6" />
                                                    <sc:CachedImage HorizontalAlignment="Center" Margin="2, 2, 2, 2"
                                                                    VerticalAlignment="Top" CornerRadius="6,6,0,0" Source="ms-appx:///Assets/Image/ZZZ_AvatarCard_Background.png" />
                                                    <sc:CachedImage Height="72"
                                                                    Width="72"
                                                                    Margin="2, 2, 2, 2"
                                                                    Stretch="UniformToFill"
                                                                    VerticalAlignment="Top"
                                                                    CornerRadius="6,6,6,6"
                                                                    Source="{x:Bind RoleSquareUrl}" />
                                                    <TextBlock Margin="0,0,0,2"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Bottom"
                                                                FontSize="12">
                                                        <Run Text="LV." /><Run Text="{x:Bind Level}" />
                                                    </TextBlock>
                                                    <Border HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            Width="21"
                                                            Height="21"
                                                            Margin="2"
                                                            Background="Black"
                                                            CornerRadius="0,0,4,0" />
                                                    <Border HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            Margin="2"
                                                            Background="#A0000000"
                                                            CornerRadius="6,0,6,0">
                                                        <Image Width="18" Source="{x:Bind Rarity, Converter={StaticResource ZZZRarityImageConverter}}" />
                                                    </Border>
                                                    <Border HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Background="#A0000000"
                                                            CornerRadius="0,4,0,4"
                                                            Visibility="{x:Bind Rank, Converter={StaticResource IntToVisibilityConverter}}">
                                                        <TextBlock Margin="4,2,4,2"
                                                                   FontSize="14"
                                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                   IsTextScaleFactorEnabled="False"
                                                                   Text="{x:Bind Rank}" />
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                    <!--  邦布  -->
                                    <Grid Width="58" Height="78" Margin="0,15,0,0">
                                        <Border Height="78"
                                                Width="58"
                                                VerticalAlignment="Top"
                                                Background="Black"
                                                CornerRadius="6,6,6,6" />
                                        <sc:CachedImage HorizontalAlignment="Center" Margin="2, 2, 2, 2" Height="56"
                                                        Width="54"
                                                        Stretch="UniformToFill"
                                                        VerticalAlignment="Top"
                                                        CornerRadius="6,6,0,0"
                                                        Source="ms-appx:///Assets/Image/ZZZ_AvatarCard_Background.png" />
                                        <sc:CachedImage Height="60"
                                                        Stretch="UniformToFill"
                                                        VerticalAlignment="Top"
                                                        CornerRadius="6,6,6,6"
                                                        Source="{x:Bind Node1.Buddy.RectangleUrl}">
                                            <sc:CachedImage.RenderTransform>
                                                <ScaleTransform ScaleX="1.5" ScaleY="1.5" CenterX="10" CenterY="4" />
                                            </sc:CachedImage.RenderTransform>
                                            <sc:CachedImage.Clip>
                                                <RectangleGeometry Rect="0,0,40.5,40">
                                                    
                                                </RectangleGeometry>
                                            </sc:CachedImage.Clip>
                                        </sc:CachedImage>
                                        <TextBlock Margin="0,0,0,3"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    FontSize="12">
                                            <Run Text="LV." /><Run Text="{x:Bind Node1.Buddy.Level}" />
                                        </TextBlock>
                                        <Border HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            Width="21"
                                                            Height="21"
                                                            Margin="2"
                                                            Background="Black"
                                                            CornerRadius="0,0,4,0" />
                                        <Border HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            Margin="2"
                                                            Background="#A0000000"
                                                            CornerRadius="6,0,6,0">
                                            <Image Width="18" Source="{x:Bind Node1.Buddy.Rarity, Converter={StaticResource ZZZRarityImageConverter}}" />
                                        </Border>
                                    </Grid>
                                </StackPanel>
                                <!--  节点2  -->
                                <Image  Grid.Row="3"
                                        Margin="0,8,0,0"
                                        Height="18"
                                        HorizontalAlignment="Left"
                                        Source="{StaticResource Team02Icon}" />
                                <TextBlock Grid.Row="3" Grid.Column="3"
                                            Margin="0,8,0,0"
                                            HorizontalAlignment="Right" FontSize="16" Text="{x:Bind local:ShiyuDefensePage.PerformancesTime(Node2.BattleTime)}" />
                                <!--  代理人  -->
                                <StackPanel Grid.Row="4"
                                            Grid.ColumnSpan="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Orientation="Horizontal"
                                            Spacing="14">
                                    <ItemsRepeater
                                         ItemsSource="{x:Bind Node2.Avatars}">
                                        <ItemsRepeater.Layout>
                                            <StackLayout Orientation="Horizontal" Spacing="14" />
                                        </ItemsRepeater.Layout>
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate x:DataType="cgzc:ZZZAvatar">
                                                <Grid Width="76" Height="94">
                                                    <Border Height="94"
                                                            Width="76"
                                                            VerticalAlignment="Top"
                                                            Background="Black"
                                                            CornerRadius="6,6,6,6" />
                                                    <sc:CachedImage HorizontalAlignment="Center" Margin="2, 2, 2, 2"
                                                                    VerticalAlignment="Top" CornerRadius="6,6,0,0" Source="ms-appx:///Assets/Image/ZZZ_AvatarCard_Background.png" />
                                                    <sc:CachedImage Height="72"
                                                                    Width="72"
                                                                    Margin="2, 2, 2, 2"
                                                                    Stretch="UniformToFill"
                                                                    VerticalAlignment="Top"
                                                                    CornerRadius="6,6,6,6"
                                                                    Source="{x:Bind RoleSquareUrl}" />
                                                    <TextBlock Margin="0,0,0,2"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Bottom"
                                                                FontSize="12">
                                                        <Run Text="LV." /><Run Text="{x:Bind Level}" />
                                                    </TextBlock>
                                                    <Border HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            Width="21"
                                                            Height="21"
                                                            Margin="2"
                                                            Background="Black"
                                                            CornerRadius="0,0,4,0" />
                                                    <Border HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            Margin="2"
                                                            Background="#A0000000"
                                                            CornerRadius="6,0,6,0">
                                                        <Image Width="18" Source="{x:Bind Rarity, Converter={StaticResource ZZZRarityImageConverter}}" />
                                                    </Border>
                                                    <Border HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Background="#A0000000"
                                                            CornerRadius="0,4,0,4"
                                                            Visibility="{x:Bind Rank, Converter={StaticResource IntToVisibilityConverter}}">
                                                        <TextBlock Margin="4,2,4,2"
                                                                   FontSize="14"
                                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                   IsTextScaleFactorEnabled="False"
                                                                   Text="{x:Bind Rank}" />
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                    <!--  邦布  -->
                                    <Grid Width="58" Height="78" Margin="0,15,0,0">
                                        <Border Height="78"
                                                Width="58"
                                                VerticalAlignment="Top"
                                                Background="Black"
                                                CornerRadius="6,6,6,6" />
                                        <sc:CachedImage HorizontalAlignment="Center" Margin="2, 2, 2, 2" Height="56"
                                                        Width="54"
                                                        Stretch="UniformToFill"
                                                        VerticalAlignment="Top"
                                                        CornerRadius="6,6,0,0"
                                                        Source="ms-appx:///Assets/Image/ZZZ_AvatarCard_Background.png" />
                                        <sc:CachedImage Height="60"
                                                        Stretch="UniformToFill"
                                                        VerticalAlignment="Top"
                                                        CornerRadius="6,6,6,6"
                                                        Source="{x:Bind Node2.Buddy.RectangleUrl}">
                                            <sc:CachedImage.RenderTransform>
                                                <ScaleTransform ScaleX="1.5" ScaleY="1.5" CenterX="10" CenterY="4" />
                                            </sc:CachedImage.RenderTransform>
                                            <sc:CachedImage.Clip>
                                                <RectangleGeometry Rect="0,0,40.5,40">

                                                </RectangleGeometry>
                                            </sc:CachedImage.Clip>
                                        </sc:CachedImage>
                                        <TextBlock Margin="0,0,0,3"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    FontSize="12">
                                            <Run Text="LV." /><Run Text="{x:Bind Node1.Buddy.Level}" />
                                        </TextBlock>
                                        <Border HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            Width="21"
                                                            Height="21"
                                                            Margin="2"
                                                            Background="Black"
                                                            CornerRadius="0,0,4,0" />
                                        <Border HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            Margin="2"
                                                            Background="#A0000000"
                                                            CornerRadius="6,0,6,0">
                                            <Image Width="18" Source="{x:Bind Node1.Buddy.Rarity, Converter={StaticResource ZZZRarityImageConverter}}" />
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</sf:PageBase>